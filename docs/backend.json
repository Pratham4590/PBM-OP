{
  "entities": {
    "PaperType": {
      "title": "PaperType",
      "type": "object",
      "description": "Represents a type of paper with its properties.",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the paper type."
        },
        "gsm": {
          "type": "number",
          "description": "Grams per square meter of the paper."
        },
        "length": {
          "type": "number",
          "description": "Length of the paper in centimeters."
        }
      },
      "required": [
        "name",
        "gsm",
        "length"
      ]
    },
    "ItemType": {
      "title": "ItemType",
      "type": "object",
      "description": "Represents a type of item being produced.",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the item type."
        },
        "shortCode": {
          "type": "string",
          "description": "Short code for the item type."
        }
      },
      "required": [
        "name",
        "shortCode"
      ]
    },
    "Stock": {
      "title": "Stock",
      "type": "object",
      "description": "Represents the stock of paper reels.",
      "properties": {
        "date": {
          "type": "string",
          "description": "Date of the stock entry.",
          "format": "date-time"
        },
        "paperTypeId": {
          "type": "string",
          "description": "Reference to PaperType."
        },
        "length": {
          "type": "number",
          "description": "Length of the paper in the stock (cm)."
        },
        "gsm": {
          "type": "number",
          "description": "GSM of the paper in the stock."
        },
        "totalWeight": {
          "type": "number",
          "description": "Total weight of the paper in the stock."
        },
        "numberOfReels": {
          "type": "number",
          "description": "Number of reels in the stock."
        }
      },
      "required": [
        "date",
        "paperTypeId",
        "length",
        "gsm",
        "totalWeight",
        "numberOfReels"
      ]
    },
    "Program": {
      "title": "Program",
      "type": "object",
      "description": "Represents a production program for notebooks.",
      "properties": {
        "date": {
          "type": "string",
          "description": "Date of the program.",
          "format": "date-time"
        },
        "paperTypeId": {
          "type": "string",
          "description": "Reference to PaperType."
        },
        "gsm": {
          "type": "number",
          "description": "GSM of the paper used in the program."
        },
        "length": {
          "type": "number",
          "description": "Length of the paper used in the program."
        },
        "cutoff": {
          "type": "number",
          "description": "Cutoff value for the program."
        },
        "itemTypeId": {
          "type": "string",
          "description": "Reference to ItemType."
        },
        "notebookPages": {
          "type": "number",
          "description": "Number of pages in the notebook."
        },
        "coverIndex": {
          "type": "number",
          "description": "Number of cover and index pages."
        },
        "ups": {
          "type": "number",
          "description": "UPS value for the program."
        },
        "piecesPerBundle": {
          "type": "number",
          "description": "Number of pieces per bundle."
        },
        "bundlesRequired": {
          "type": "number",
          "description": "Number of bundles required for the program."
        },
        "brand": {
          "type": "string",
          "description": "Brand of the notebook being produced."
        },
        "reamWeight": {
            "type": "number"
        },
        "totalSheetsRequired": {
            "type": "number"
        }
      },
      "required": [
        "date",
        "paperTypeId",
        "gsm",
        "length",
        "cutoff",
        "itemTypeId",
        "notebookPages",
        "coverIndex",
        "ups",
        "piecesPerBundle",
        "bundlesRequired",
        "brand",
        "reamWeight",
        "totalSheetsRequired"
      ]
    },
    "Reel": {
      "title": "ReelRuling",
      "type": "object",
      "description": "Represents the ruling of a paper reel.",
      "properties": {
        "date": {
          "type": "string",
          "description": "Date of the reel ruling.",
          "format": "date-time"
        },
        "serialNo": {
          "type": "string",
          "description": "Serial number of the reel."
        },
        "reelNo": {
          "type": "string",
          "description": "Reel number."
        },
        "paperTypeId": {
          "type": "string",
          "description": "Reference to PaperType."
        },
        "reelWeight": {
          "type": "number",
          "description": "Weight of the reel."
        },
        "status": {
            "type": "string"
        },
        "entries": {
            "type": "array",
            "items": {
                "$ref": "#/entities/ReelEntry"
            }
        }
      },
      "required": [
        "date",
        "serialNo",
        "reelNo",
        "paperTypeId",
        "reelWeight",
        "status",
        "entries"
      ]
    },
    "ReelEntry": {
        "title": "ReelEntry",
        "type": "object",
        "properties": {
            "itemTypeId": { "type": "string" },
            "sheetsRuled": { "type": "number" },
            "programId": { "type": "string" },
            "cutoff": { "type": "number" },
            "theoreticalSheets": { "type": "number" },
            "difference": { "type": "number" }
        },
        "required": ["itemTypeId", "sheetsRuled", "cutoff", "theoreticalSheets", "difference"]
    },
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user of the application.",
      "properties": {
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        },
        "role": {
          "type": "string",
          "description": "Role of the user (Admin, Member, Operator)."
        }
      },
      "required": [
        "email",
        "role"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "collections": {
      "paper_types": {
        "schema": {
          "$ref": "#/entities/PaperType"
        },
        "description": "Stores different paper types, including paper name, GSM, and length."
      },
      "item_types": {
        "schema": {
          "$ref": "#/entities/ItemType"
        },
        "description": "Stores different item types, including item name and short code."
      },
      "stock": {
        "schema": {
          "$ref": "#/entities/Stock"
        },
        "description": "Stores the stock levels of different paper types. Only admins can modify."
      },
      "programs": {
        "schema": {
          "$ref": "#/entities/Program"
        },
        "description": "Stores program information."
      },
      "reels": {
        "schema": {
          "$ref": "#/entities/Reel"
        },
        "description": "Stores reel ruling entries."
      },
      "users": {
        "schema": {
          "$ref": "#/entities/User"
        },
        "description": "Stores user profiles, including roles (Admin, Member, Operator)."
      }
    }
  }
}

    